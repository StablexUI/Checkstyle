{
    "checks": [
        {
            "type"  : "EmptyLines",
            "props" : {
                "severity" : "WARNING",
                "max"      : 2
            }
        },
        {
            "type"  : "AccessOrder",
            "props" : {
                "severity"  : "WARNING",
                "modifiers" : [
                    "MACRO",
                    "OVERRIDE",
                    "STATIC",
                    "PUBLIC_PRIVATE",
                    "INLINE",
                    "DYNAMIC"
                ]
            }
        },
        {
            "type"  : "Anonymous",
            "props" : {
                "severity" : "ERROR"
            }
        },
        {
            "type"  : "ConstantName",
            "props" : {
                "severity" : "ERROR",
                "format"   : "^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$",
                "tokens"   : [
                    "INLINE"
                ]
            }
        },
        {
            "type"  : "CyclomaticComplexity",
            "props" : {
                "thresholds" : [
                    {
                        "severity"   : "WARNING",
                        "complexity" : 10
                    },
                    {
                        "severity"   : "ERROR",
                        "complexity" : 20
                    }
                ]
            }
        },
        {
            "type"  : "FileLength",
            "props" : {
                "severity" : "WARNING",
                "max"      : 1500
            }
        },
        {
            "type"  : "HexadecimalLiterals",
            "props" : {
                "severity" : "WARNING",
                "option"   : "upperCase"
            }
        },
        {
            "type"  : "IndentationCharacter",
            "props" : {
                "severity"  : "WARNING",
                "character" : "space"
            }
        },
        {
            "type"  : "LeftCurly",
            "props" : {
                "severity" : "WARNING",
                "option"   : "eol",
                "tokens"   : [
                    "TYPEDEF_DEF",
                    "FOR",
                    "IF",
                    "WHILE",
                    "SWITCH",
                    "TRY",
                    "CATCH"
                ]
            }
        },
        {
            "type"  : "LeftCurly",
            "props" : {
                "severity" : "WARNING",
                "option"   : "nl",
                "tokens"   : [
                    "CLASS_DEF",
                    "ENUM_DEF",
                    "ABSTRACT_DEF",
                    "INTERFACE_DEF"
                ]
            }
        },
        {
            "type"  : "LineLength",
            "props" : {
                "severity" : "ERROR",
                "max"      : 160
            }
        },
        {
            "type"  : "LocalVariableName",
            "props" : {
                "severity" : "ERROR",
                "format"   : "^[a-z][a-zA-Z0-9]*$"
            }
        },
        {
            "type"  : "MemberName",
            "props" : {
                "severity" : "ERROR",
                "format"   : "^[a-z][a-zA-Z0-9]*$",
                "tokens"   : [
                    "PUBLIC",
                    "TYPEDEF"
                ]
            }
        },
        {
            "type"  : "MemberName",
            "props" : {
                "severity" : "ERROR",
                "format"   : "^__[a-z][a-zA-Z0-9]*$",
                "tokens"   : [
                    "PRIVATE"
                ]
            }
        },
        {
            "type"  : "MethodLength",
            "props" : {
                "severity" : "ERROR",
                "max"      : 40
            }
        },
        {
            "type"  : "MethodName",
            "props" : {
                "severity" : "ERROR",
                "format"   : "^[a-z][a-zA-Z0-9]*$",
                "tokens"   : [
                    "PUBLIC"
                ]
            }
        },
        {
            "type"  : "MethodName",
            "props" : {
                "severity" : "ERROR",
                "format"   : "^(__[a-z][a-zA-Z0-9]*)|(new)$",
                "tokens"   : [
                    "PRIVATE"
                ]
            }
        },
        {
            "type"  : "NeedBraces",
            "props" : {
                "severity"                 : "WARNING",
                "allowSingleLineStatement" : true,
                "tokens"                   : ["IF", "FOR", "ELSE_IF", "WHILE", "TRY", "CATCH"]
            }
        },
        {
            "type"  : "NestedForDepth",
            "props" : {
                "severity" : "ERROR",
                "max"      : 1
            }
        },
        {
            "type"  : "NestedIfDepth",
            "props" : {
                "severity" : "ERROR",
                "max"      : 1
            }
        },
        {
            "type"  : "NestedTryDepth",
            "props" : {
                "severity" : "ERROR",
                "max"      : 1
            }
        },
        {
            "type"  : "ParameterName",
            "props" : {
                "severity" : "ERROR",
                "format"   : "^[a-z][a-zA-Z0-9]*$"
            }
        },
        {
            "type"  : "ParameterNumber",
            "props" : {
                "severity" : "WARNING",
                "max"      : 4,
                "ignoreOverriddenMethods" : true
            }
        },
        {
            "type"  : "Spacing",
            "props" : {
                "severity"            : "WARNING",
                "spaceIfCondition"    : true,
                "spaceAroundBinop"    : true,
                "noSpaceAroundUnop"   : true,
                "ignoreRangeOperator" : true
            }
        },
        {
            "type"  : "TODOComment",
            "props" : {
                "severity" : "WARNING"
            }
        },
        {
            "type"  : "TabForAligning",
            "props" : {
                "severity" : "WARNING"
            }
        },
        {
            "type"  : "TrailingWhitespace",
            "props" : {
                "severity" : "WARNING"
            }
        },
        {
            "type"  : "TypeName",
            "props" : {
                "severity" : "ERROR",
                "format"   : "^[A-Z]+[a-zA-Z0-9]*$",
                "tokens"   : [
                    "CLASS",
                    "ENUM",
                    "TYPEDEF"
                ]
            }
        },
        {
            "type"  : "TypeName",
            "props" : {
                "severity" : "ERROR",
                "format"   : "^I[A-Z]+[a-zA-Z0-9]*$",
                "tokens"   : [
                    "INTERFACE"
                ]
            }
        }
    ]
}